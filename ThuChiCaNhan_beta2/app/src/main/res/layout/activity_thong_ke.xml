<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.thuchicanhan_beta2.ThongKe">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="dp"
        tools:layout_editor_absoluteY="dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbartk"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNgayThongKe"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/buttonThongKe"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Chọn ngày" />

            <Button
                android:id="@+id/btnChon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thống kê" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#859ec9"
            android:gravity="center"
            android:text="Khoản Chi"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listThongKechi"
            android:layout_width="match_parent"
            android:layout_height="190dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#859ec9"
            android:gravity="center"
            android:text="Khoản Thu"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listThongKethu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
